		div.img-background.hide-on-print
		div.page-container
			div#page.d-flex.flex-column(style="flex: 1")
				div.row
				
					//====================================================================
					//PANEL 1: PROFILE PIC
					//====================================================================
					div.col-sm-4.left-container.top-left-radius
						include includes/profile.html
						
