					//PANEL 2: PRESENTATION
					//====================================================================
					div.col-sm-8.right-container.top-right-radius
						include includes/presentation.html

			
				div.row.flex-grow.d-flex(style="flex: 1")
					
					//====================================================================
					//PANEL 3: LEFT PANEL
					//====================================================================
					div.col-sm-4.left-container
						include sections/about.pug
						include includes/qr_code.html
					
