mixin about_item(icon, text, link = '', description_tooltip = '')
	table
		tr(data-toggle="tooltip" data-placement="right" title=description_tooltip)
			if icon!==''
				td
					ion-icon(name=icon)
			
			td
				if link!== ''
					a(href=link)= text
				else
					a= text
					
			if description_tooltip !== ''
				td
					ion-icon(name='information-circle-outline').hide-on-print
			else
				td
					ion-icon(name='information-circle-outline' style="visibility:hidden").hide-on-print

