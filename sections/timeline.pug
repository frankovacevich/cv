mixin timeline_milestone(size, text)
	tr
		td(style="width:30px")
			div.tl-milestone(style="width:" + size + ";height:" + size)
		td
			b!= text

mixin timeline_stem(text)
	tr
		td(style="width:30px")
			div.tl
		td
			p!= text
			
mixin timeline_empty(text)
	tr
		td(style="width:30px")
			div
		td
			p!= text
		
